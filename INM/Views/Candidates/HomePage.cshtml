@model IEnumerable<INM.Models.Candidate>

@{
    ViewBag.Title = "Home Page";
}

<body>
    <!-- <div class="jumbotron">-->
    <h2>Welcome to Crowd AI! (parallel version, beta)</h2>
    <!--    <p class="lead">
        Thank you for your help and interest. Unfortunatelly, we are currently working on some bugs,
        so please come back later.
    </p>-->
    <p class="lead">
        <br />Start a new experiment
        <span class="btn btn-primary btn-lg">@Html.ActionLink("Evolve", "StartEvolution", "Candidates", null, new { @style = "color:#e8e8ef;" })</span>
    </p>

    <!-- <hr> does not create a line with Bootstrap :( -->
    <p>
        <span style="display:block; height: 20px;"></span>
    </p>

    <p class="lead">
        Or continue from a published behaviour!
    </p>

    <table class="table-condensed">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
            <tr>
                <td>
                    <video id="elementName" width="432" height="240" controls autoplay loop>
                        <source src=@item.VideoPath type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </td>
                <td><span style="display:inline-block; width: 50px;"></span></td>
                <td>
                    <!-- arroba Html.ActionLink("Edit", "Edit", new { id = item.CandidateID }) | -->
                    @Html.ActionLink("Details", "Details", new { id = item.CandidateID })
                    <!--<b>arroba Html.ActionLink("Branch!", "Branch", new { id = item.CandidateID })</b>-->
                    <p class="btn btn-primary btn-lg">@Html.ActionLink("Evolve", "Branch", new { id = item.CandidateID }, new { @style = "color:#e8e8ef;" })</p>
                </td>
            </tr>
        }
    </table>
    <!--</div>-->
</body>

<script>
    var inputs = document.getElementsByTagName("video");
    for (x = 0; x < inputs.length; ++x) {
        inputs[x].playbackRate = 0.2;
    }
</script>

